@model MenuClass.MainMenu
<link href="~/assets/select2/css/select2.css" rel="stylesheet" />
@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger" role="alert">
        <strong>Oh worrying!</strong> @localizer.GetLocalizedHtmlString(ViewBag.Error)
    </div>
}

<div class="ms-panel">
    <div class="ms-panel-header">
        <h6>@localizer.GetLocalizedHtmlString("Update Main Menu")</h6>
    </div>
    <div class="ms-panel-body">
        <form class="needs-validation" novalidate asp-action="edit" method="post">
            <div class="col-xl-12 col-md-12">
                <div class="form-row">
                    <div class="col-md-12">
                        <label>@localizer.GetLocalizedHtmlString("Main Menu ID")</label> <span class="required-star">*</span>
                        <div class="input-group">
                            <input type="text" asp-for="Id" autocomplete="off" class="form-control" placeholder="@localizer.GetLocalizedHtmlString("ID")" required>
                            <div class="valid-feedback">
                                @localizer.GetLocalizedHtmlString("Looks good!")
                            </div>
                            <div class="invalid-feedback">
                                @localizer.GetLocalizedHtmlString("Main menu id name is required.")
                            </div>
                        </div>
                        <label>@localizer.GetLocalizedHtmlString("Description")</label> <span class="required-star">*</span>
                        <div class="input-group">
                            <input type="text" asp-for="Description" autocomplete="off" class="form-control" placeholder="@localizer.GetLocalizedHtmlString("Description")" required>
                            <div class="valid-feedback">
                                @localizer.GetLocalizedHtmlString("Looks good!")
                            </div>
                            <div class="invalid-feedback">
                                @localizer.GetLocalizedHtmlString("Description is required.")
                            </div>
                        </div>

                        <label>@localizer.GetLocalizedHtmlString("Menus")</label> <span class="required-star">*</span>
                        <div class="input-group">
                            <select asp-for="Menus" multiple class="select2 form-control" required asp-items="ViewBag.Menu">
                            </select>
                            <div class="valid-feedback">
                                @localizer.GetLocalizedHtmlString("Looks good!")
                            </div>
                            <div class="invalid-feedback">
                                @localizer.GetLocalizedHtmlString("Menus is required.")
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 text-right">
                        <button class="btn btn-primary" type="submit">@localizer.GetLocalizedHtmlString("Update")</button>
                        <a class="btn btn-primary" asp-action="index">@localizer.GetLocalizedHtmlString("Back to List")</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<script src="~/assets/select2/js/select2.min.js" defer></script>
<script>
    $(document).ready(function () {
        $('.select2').select2();
    });
</script>
