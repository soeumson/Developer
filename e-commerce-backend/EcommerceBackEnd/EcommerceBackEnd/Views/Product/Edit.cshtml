@model Product
<form asp-action="edit" asp-controller="product" class="needs-validation clearfix" novalidate enctype="multipart/form-data">
    <input type="hidden" asp-for="ProductID"/>
    <div class="row">
        <div class="col-md-12">
            @if (!string.IsNullOrEmpty(ViewBag.Error))
            {
                <div class="alert alert-danger" role="alert">
                    <strong>Oh worrying!</strong> @localizer.GetLocalizedHtmlString(ViewBag.Error)
                </div>
            }
            @if (!string.IsNullOrEmpty(ViewBag.Success))
            {
                <div class="alert alert-success" role="alert">
                    <strong>Well done!</strong> @localizer.GetLocalizedHtmlString("You successfully create product.")
                </div>
            }
        </div>
        <div class="col-xl-6 col-md-12">
            <div class="ms-panel ms-panel-fh">
                <div class="ms-panel-header">
                    <h6>@localizer.GetLocalizedHtmlString("Update Product")</h6>
                </div>
                <div class="ms-panel-body">
                    <div class="form-row">
                        <div class="col-md-12 mb-0">
                            <label>@localizer.GetLocalizedHtmlString("Product Code")</label> <span class="required-star">*</span>
                            <input type="hidden" asp-for="CodeTemp" />
                            <div class="input-group">
                                <input type="text" asp-for="ProductCode" class="form-control" autocomplete="off" placeholder="@localizer.GetLocalizedHtmlString("Product code")" required>
                                <div class="valid-feedback">
                                    @localizer.GetLocalizedHtmlString("Looks good!")
                                </div>
                                <div class="invalid-feedback">
                                    @localizer.GetLocalizedHtmlString("Product code is required.")
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 mb-0">
                            <label>@localizer.GetLocalizedHtmlString("Product Name")</label> <span class="required-star">*</span>
                            <div class="input-group">
                                <input type="text" asp-for="ProductName" class="form-control" autocomplete="off" placeholder="@localizer.GetLocalizedHtmlString("Product name")" required>
                                <div class="valid-feedback">
                                    @localizer.GetLocalizedHtmlString("Looks good!")
                                </div>
                                <div class="invalid-feedback">
                                    @localizer.GetLocalizedHtmlString("Product name is required.")
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-0">
                            <label>@localizer.GetLocalizedHtmlString("Catagory")</label> <span class="required-star">*</span>
                            <div class="input-group">
                                <select asp-for="CategoryID" asp-items="ViewBag.Category" class="form-control" required>
                                    <option></option>
                                </select>
                                <div class="invalid-feedback">
                                    @localizer.GetLocalizedHtmlString("Select a catagory.")
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-0">
                            <label>@localizer.GetLocalizedHtmlString("Sub Category")</label> <span class="required-star">*</span>
                            <div class="input-group">
                                <select asp-for="SubCategoryID" asp-items="ViewBag.SubCategory" class="form-control">
                                    <option></option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6 mb-0">
                            <label>@localizer.GetLocalizedHtmlString("Uom")</label> <span class="required-star">*</span>
                            <div class="input-group">
                                <select asp-for="UomID" asp-items="ViewBag.Uom" class="form-control" required>
                                    <option></option>
                                </select>
                                <div class="invalid-feedback">
                                    @localizer.GetLocalizedHtmlString("Select a uom.")
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-0">
                            <label>@localizer.GetLocalizedHtmlString("Model")</label>
                            <div class="input-group">
                                <select asp-for="ModelID" asp-items="ViewBag.Model" class="form-control">
                                    <option></option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-6 mb-0">
                            <label>@localizer.GetLocalizedHtmlString("Qty")</label> <span class="required-star">*</span>
                            <div class="input-group">
                                <input type="number" step="0.01" asp-for="Qty" autocomplete="off" class="form-control" placeholder="@localizer.GetLocalizedHtmlString("qty")" required>
                                <div class="invalid-feedback">
                                    @localizer.GetLocalizedHtmlString("Qty")
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-0">
                            <label>@localizer.GetLocalizedHtmlString("Price")</label> <span class="required-star">*</span>

                            <div class="input-group">
                                <input type="number" step="0.01" asp-for="Price" autocomplete="off" class="form-control" placeholder="@ViewBag.Currency" required>
                                <div class="invalid-feedback">
                                    @localizer.GetLocalizedHtmlString("Price")
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-0">
                            <label>@localizer.GetLocalizedHtmlString("Discount Type")</label> <span class="required-star">*</span>
                            <div class="input-group">
                                <select asp-for="DiscountType" class="form-control">
                                    <option value="Percent">@localizer.GetLocalizedHtmlString("Percent")</option>
                                    <option value="Cash">@localizer.GetLocalizedHtmlString("Cash")</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6 mb-0">
                            <label>@localizer.GetLocalizedHtmlString("Discount Value")</label>
                            <div class="input-group">
                                <input type="number" step="0.01" asp-for="DiscountValue" autocomplete="off" class="form-control" placeholder="@ViewBag.Currency">
                            </div>
                        </div>
                        <div class="col-md-12 mb-0">
                            <label>@localizer.GetLocalizedHtmlString("Description")</label> <span class="required-star">*</span>
                            <div class="input-group">
                                <textarea rows="3" required asp-for="Description" class="form-control" placeholder="@localizer.GetLocalizedHtmlString("Message")"></textarea>
                            </div>
                            <div class="valid-feedback">
                                @localizer.GetLocalizedHtmlString("Looks good!")
                            </div>
                            <div class="invalid-feedback">
                                @localizer.GetLocalizedHtmlString("Description is required.")
                            </div>
                        </div>
                        <div class="col-md-12 mb-0">
                            <label for="validationCustom12">@localizer.GetLocalizedHtmlString("Product Images")</label> <span class="required-star">*</span>
                            <div class="custom-file">
                                <input asp-for="FormFile" multiple type="file" class="custom-file-input" accept=".ico, .png, .jpg, .jpeg, .gif">
                                <label class="custom-file-label">Upload Images...</label>
                                <input id="images" hidden asp-for="Images" />
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-xl-6 col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="ms-panel">
                        <div class="ms-panel-header">
                            <h6>@localizer.GetLocalizedHtmlString("Product") </h6>
                        </div>
                        <div class="ms-panel-body">
                            <div id="imagesSlider" class="ms-image-slider carousel slide" data-ride="carousel">
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img class="d-block w-100" src="../../assets/img/costic/add-product-1.jpg" alt="First slide">
                                    </div>
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="../../assets/img/costic/add-product-2.jpg" alt="Second slide">
                                    </div>
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="../../assets/img/costic/add-product-3.jpg" alt="Third slide">
                                    </div>
                                </div>
                                <ol class="carousel-indicators">
                                    <li data-target="#imagesSlider" data-slide-to="0" class="active"> <img class="d-block w-100" src="../../assets/img/costic/add-product-1.jpg" alt="First slide"></li>
                                    <li data-target="#imagesSlider" data-slide-to="1"><img class="d-block w-100" src="../../assets/img/costic/add-product-2.jpg" alt="Second slide"></li>
                                    <li data-target="#imagesSlider" data-slide-to="2"><img class="d-block w-100" src="../../assets/img/costic/add-product-3.jpg" alt="Third slide"></li>
                                </ol>
                            </div>
                            <div class="ms-panel-header new">
                                <p class="medium">@localizer.GetLocalizedHtmlString("Status Available")</p>
                                <div>
                                    <label class="ms-switch">
                                        <input type="checkbox" asp-for="StatusAvailable">
                                        <span class="ms-switch-slider round"></span>
                                    </label>
                                </div>
                            </div>

                            <div class="ms-panel-header new">
                                <p class="medium">@localizer.GetLocalizedHtmlString("Manage Stock")</p>
                                <div>
                                    <label class="ms-switch">
                                        <input type="checkbox" asp-for="ManageStock">
                                        <span class="ms-switch-slider round"></span>
                                    </label>
                                </div>
                            </div>
                            <div class="ms-panel-header new">
                                <p class="medium">@localizer.GetLocalizedHtmlString("Discount Active")</p>
                                <div>
                                    <label class="ms-switch">
                                        <input type="checkbox" asp-for="DiscountActive">
                                        <span class="ms-switch-slider round"></span>
                                    </label>
                                </div>
                            </div>
                            <br />
                            <div class="col-md-12 mb-0">
                                <label>@localizer.GetLocalizedHtmlString("Fee Included")</label>
                                <div class="input-group">
                                    <input type="number" step="0.01" asp-for="FeeIncluded" autocomplete="off" class="form-control" placeholder="@ViewBag.Currency">
                                </div>
                            </div>
                            <div class="col-md-12 mb-0">
                                <label>@localizer.GetLocalizedHtmlString("Vat Included")</label>
                                <div class="input-group">
                                    <input type="number" step="0.01" asp-for="VatIncluded" autocomplete="off" class="form-control" placeholder="@ViewBag.Currency">
                                </div>
                            </div>
                        </div>
                        <div class="ms-panel-header new">
                            <div></div>
                            <div style="display:flex">
                                <button class="btn btn-primary d-block" type="submit">@localizer.GetLocalizedHtmlString("Update")</button>
                                <a class="btn btn-primary" asp-action="index">@localizer.GetLocalizedHtmlString("Back to List")</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<script src="~/js/product/product.js"></script>