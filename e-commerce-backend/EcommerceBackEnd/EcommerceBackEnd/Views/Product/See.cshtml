@model Product
<div class="row">
    <div class="ms-content-wrapper">
        <div class="row">
            <div class="col-md-12">
                <div class="ms-panel">
                    <div class="ms-panel-header">
                        <h6>@localizer.GetLocalizedHtmlString("View Product")</h6>
                    </div>
                    <div class="ms-panel-body">
                        <div id="arrowSlider" class="ms-arrow-slider carousel slide" data-ride="carousel" data-interval="false">
                            <div class="carousel-inner">
                                @{
                                    string[] images = new string[] { };
                                    string image = "";
                                    if (Model.Images != null)
                                    {
                                        images = Model.Images.Split(',');
                                        image = images[0];
                                    }
                                }
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="~/product_images/@image" alt="First slide" style="width:1040px;height:350px;">
                                    <div class="carousel-caption d-none d-md-block">
                                        <h3 class="text-white">@image</h3>
                                    </div>
                                </div>
                                @for (int i = 1; i < images.Length; i++)
                                {
                                    <div class="carousel-item">
                                        <img class="d-block w-100" src="~/product_images/@images[i]" alt="Second slide" style="width:1040px;height:350px;">
                                        <div class="carousel-caption d-none d-md-block">
                                            <h3 class="text-white">@images[i]</h3>
                                        </div>
                                    </div>
                                }
                            </div>
                            <a class="carousel-control-prev" href="#arrowSlider" role="button" data-slide="prev">
                                <span class="material-icons" aria-hidden="true">keyboard_arrow_left</span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#arrowSlider" role="button" data-slide="next">
                                <span class="material-icons" aria-hidden="true">keyboard_arrow_right</span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class=" col-md-6">
                <div class="ms-panel ms-panel-fh">
                    <div class="ms-panel-body">
                        <h4 class="section-title bold">@localizer.GetLocalizedHtmlString("Product Info")</h4>
                        <table class="table ms-profile-information">
                            <tbody>
                                <tr>
                                    <th scope="row">Product Code</th>
                                    <td>@Model.ProductCode</td>
                                </tr>
                                <tr>
                                    <th scope="row">Product Name</th>
                                    <td>@Model.ProductName</td>
                                </tr>
                                <tr>
                                    <th scope="row">Category</th>
                                    <td>@Model.CategoryName</td>
                                </tr>
                                <tr>
                                    <th scope="row">Sub Category</th>
                                    <td>@Model.SubCategoryName</td>
                                </tr>

                                <tr>
                                    <th scope="row">Model</th>
                                    <td>@Model.ModelName</td>
                                </tr>
                                <tr>
                                    <th scope="row">Uom</th>
                                    <td>@Model.UomName</td>
                                </tr>
                                <tr>
                                    <th scope="row">Qty</th>
                                    <td>@Model.Qty</td>
                                </tr>
                                <tr>
                                    <th scope="row">Price</th>
                                    <td>@ViewBag.Currency@Model.Price</td>
                                </tr>
                                <tr>
                                    <th scope="row">Discount Active</th>
                                    <td>
                                        @if (!Model.DiscountActive)
                                        {
                                            <span class="badge badge-success">@localizer.GetLocalizedHtmlString("Active")</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">@localizer.GetLocalizedHtmlString("InActive")</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Discount Type</th>
                                    <td>@Model.DiscountType</td>
                                </tr>
                                <tr>
                                    <th scope="row">Discount Value</th>
                                    <td>@ViewBag.Currency@Model.DiscountValue</td>
                                </tr>
                                <tr>
                                    <th scope="row">Fee Included</th>
                                    <td>@ViewBag.Currency@Model.FeeIncluded</td>
                                </tr>
                                <tr>
                                    <th scope="row">Vat Included</th>
                                    <td>@ViewBag.Currency@Model.VatIncluded</td>
                                </tr>
                                <tr>
                                    <th scope="row">Status</th>
                                    <td>
                                        @if (!Model.Status)
                                        {
                                            <span class="badge badge-success">@localizer.GetLocalizedHtmlString("Available")</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">@localizer.GetLocalizedHtmlString("Unvailable")</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Manage Stock</th>
                                    <td>
                                        @if (!Model.ManageStock)
                                        {
                                            <span class="badge badge-success">@localizer.GetLocalizedHtmlString("Manage")</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">@localizer.GetLocalizedHtmlString("Not manage")</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Create By</th>
                                    <td>@Model.CreateBy</td>
                                </tr>
                                <tr>
                                    <th scope="row">Create Date</th>
                                    <td>@Model.CreateDate</td>
                                </tr>
                                <tr>
                                    <th scope="row">Update By</th>
                                    <td>@Model.UpdateBy</td>
                                </tr>
                                <tr>
                                    <th scope="row">Update Date</th>
                                    <td>@Model.UpdateBy</td>
                                </tr>
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
            <div class=" col-md-6">
                <div class="ms-panel ms-panel-fh">
                    <div class="ms-panel-body">

                        <h4 class="section-title bold">@localizer.GetLocalizedHtmlString("Product Details") </h4>
                        <p class="description">@Model.Description</p>
                    </div>
                    <div class="ms-quick-stats">
                        <div class="ms-stats-grid">
                            <i class="fa fa-bullhorn"></i>
                            <p class="ms-text-dark">@Model.TotalOrder</p>
                            <span>@localizer.GetLocalizedHtmlString("Today Order")</span>
                        </div>
                        <div class="ms-stats-grid">
                            <i class="fa fa-heart"></i>
                            <p class="ms-text-dark">@Model.Favourite</p>
                            <span>@localizer.GetLocalizedHtmlString("Favourite")</span>
                        </div>
                    </div>
                    <div style="position: absolute; bottom: 40px; right: 23px; ">
                        <a class="btn btn-primary" asp-action="index">@localizer.GetLocalizedHtmlString("Back to List")</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
