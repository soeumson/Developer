@model ResetPasswordViewMedel
@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger" role="alert">
        <strong>Oh worrying!</strong> @localizer.GetLocalizedHtmlString(ViewBag.Error)
    </div>
}
@if (!string.IsNullOrEmpty(ViewBag.Success))
{
    <div class="alert alert-success" role="alert">
        <strong>Well done!</strong> @localizer.GetLocalizedHtmlString("You successfully reset password account.")
    </div>
}
<div class="ms-panel">
    <div class="ms-panel-header">
        <h6>@localizer.GetLocalizedHtmlString("Reset Password User")</h6>
    </div>
    <div class="ms-panel-body">
        <form class="needs-validation" novalidate asp-action="resetpasswordadmin" method="post">
            <input type="hidden" asp-for="Key" value="@ViewBag.Key" />
            <div class="col-xl-12 col-md-12">
                <div class="form-row">
                    <div class="col-md-12">
                        <label>@localizer.GetLocalizedHtmlString("New Password")</label> <span class="required-star">*</span>
                        <div class="input-group">
                            <input type="password" asp-for="NewPassoword" class="form-control" placeholder="@localizer.GetLocalizedHtmlString("New password")" required>
                            <div class="valid-feedback">
                                @localizer.GetLocalizedHtmlString("Looks good!")
                            </div>
                            <div class="invalid-feedback">
                                @localizer.GetLocalizedHtmlString("New Password is required.")
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <label>@localizer.GetLocalizedHtmlString("Confirm New password")</label> <span class="required-star">*</span>
                        <div class="input-group">
                            <input type="password" asp-for="ConfirmNewPassword" class="form-control" placeholder="@localizer.GetLocalizedHtmlString("Confirm new password")" autocomplete="off" required>
                            <div class="valid-feedback">
                                @localizer.GetLocalizedHtmlString("Looks good!")
                            </div>
                            <div class="invalid-feedback">
                                @localizer.GetLocalizedHtmlString("Confirm new password is required.")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-right">
                    <button class="btn btn-primary" type="submit">@localizer.GetLocalizedHtmlString("Save")</button>
                    <a asp-action="index" class="btn btn-primary">@localizer.GetLocalizedHtmlString("Back to List")</a>
                </div>
            </div>
        </form>
    </div>
</div>
