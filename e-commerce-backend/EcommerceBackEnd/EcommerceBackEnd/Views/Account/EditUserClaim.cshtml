@model UserClaimViewModel
@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="alert alert-danger" role="alert">
        <strong>Oh worrying!</strong> @localizer.GetLocalizedHtmlString(ViewBag.Error)
    </div>
}
<div class="ms-panel">
    <div class="ms-panel-header">
        <h6>@localizer.GetLocalizedHtmlString("Edit User Access Right")</h6>
    </div>
    <div class="ms-panel-body">
        <form class="needs-validation" novalidate asp-action="edituserclaim" method="post">
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="Id" />
            <div class="col-xl-12 col-md-12">
                <div class="form-row">
                    <div class="col-md-12">
                        <label>@localizer.GetLocalizedHtmlString("Menu")</label> <span class="required-star">*</span>
                        <div class="input-group">
                            <input type="text" readonly asp-for="ClaimType" class="form-control" />
                        </div>
                    </div>
                    <div class="col-md-12">
                        <label>@localizer.GetLocalizedHtmlString("Access Right")</label> <span class="required-star">*</span>
                        <div class="input-group">
                            <select asp-for="AccessRight" class="form-control select2" multiple required asp-items="@ViewBag.AccessRight">
                            </select>
                            <div class="valid-feedback">
                                @localizer.GetLocalizedHtmlString("Looks good!")
                            </div>
                            <div class="invalid-feedback">
                                @localizer.GetLocalizedHtmlString("Access right is required.")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-right">
                    <button class="btn btn-primary" type="submit">@localizer.GetLocalizedHtmlString("Save")</button>
                    <a asp-action="providuseraccessright" asp-controller="account" asp-route-key="@Model.UserId.Protection()" class="btn btn-primary">@localizer.GetLocalizedHtmlString("Back to List")</a>
                </div>
            </div>
        </form>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('.select2').select2();
    });
</script>
