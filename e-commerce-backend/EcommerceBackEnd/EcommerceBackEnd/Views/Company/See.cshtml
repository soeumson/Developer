@model CompanyProfile
<div class="ms-panel">
    <div class="ms-panel-header">
        <h6>@localizer.GetLocalizedHtmlString("View Shop Profile")</h6>
    </div>
    <div class="ms-panel-body">
        <div class="col-xl-12 col-md-12">
            <div class="row col-modify">
                <div class="col-md-12">
                    @if (Model.Logo != null)
                    {
                        <img class="d-block" style="height:220px; width:250px;" src="~/images/@Model.Logo" alt="First slide"><br />
                    }
                    else
                    {
                        <img class="d-block" style="height:220px; width:250px;" src="~/images/default-logo.png" alt="First slide"><br />
                    }
                </div>
                <div class="col-sm-3">
                    @localizer.GetLocalizedHtmlString("Shop ID")
                </div>
                <div class="col-sm-9">
                    @Html.DisplayFor(model => model.CompanyID)
                </div>
                <div class="col-sm-3">
                    @localizer.GetLocalizedHtmlString("Name")
                </div>
                <div class="col-sm-9">
                    @Html.DisplayFor(model => model.CompanyName)
                </div>
                <div class="col-sm-3">
                    @localizer.GetLocalizedHtmlString("Phone Number")
                </div>
                <div class="col-sm-9">
                    @Html.DisplayFor(model => model.CompanyPhone)
                </div>
                <div class="col-sm-3">
                    @localizer.GetLocalizedHtmlString("Email Adress")
                </div>
                <div class="col-sm-9">
                    @Html.DisplayFor(model => model.CompanyEmail)
                </div>
                <div class="col-sm-3">
                    @localizer.GetLocalizedHtmlString("Currency")
                </div>
                <div class="col-sm-9">
                    @Html.DisplayFor(model => model.CurrencyName)
                </div>
                <div class="col-sm-3">
                    @localizer.GetLocalizedHtmlString("Address")
                </div>
                <div class="col-sm-9">
                    @Html.DisplayFor(model => model.CompanyAddress)
                </div>
                <div class="col-sm-3">
                    @localizer.GetLocalizedHtmlString("Status")
                </div>
                <div class="col-sm-9">
                    @if (!Model.Status)
                    {
                        <span class="badge badge-primary">@localizer.GetLocalizedHtmlString("Unavailable")</span>
                    }
                    else
                    {
                        <span class="badge badge-success">@localizer.GetLocalizedHtmlString("Available")</span>
                    }
                </div>
                <div class="col-sm-3">
                    @localizer.GetLocalizedHtmlString("Create By")
                </div>
                <div class="col-sm-9">
                    @Html.DisplayFor(model => model.CreateBy)
                </div>
                <div class="col-sm-3">
                    @localizer.GetLocalizedHtmlString("Create Date")
                </div>
                <div class="col-sm-9">
                    @Html.DisplayFor(model => model.CreateDate)
                </div>
                <div class="col-sm-3">
                    @localizer.GetLocalizedHtmlString("Update By")
                </div>
                <div class="col-sm-9">
                    @Html.DisplayFor(model => model.UpdateBy)
                </div>
                <div class="col-sm-3">
                    @localizer.GetLocalizedHtmlString("Update Date")
                </div>
                <div class="col-sm-9">
                    @Html.DisplayFor(model => model.UpdateDate)
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-right">
                <a class="btn btn-primary" asp-action="index">@localizer.GetLocalizedHtmlString("Back to List")</a>
            </div>
        </div>
    </div>
</div>  
